{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "DB_PROVIDER": "sqlite",
  "ConnectionStrings": {
    "sqlite": "Data Source=FitnessDuck.db",
    "postgres": "Host=localhost;Database=FitnessDuck;Username=postgres;Password=password"
  },
  "Otp": {
    "TelegramBotToken": "your-telegram-bot-token-here",
    "SendGridKey": "your-sendgrid-api-key-here",
    "OtpExpiryMinutes": 5
  },

  "Jwt": {
    "Key": "your-secret-key-for-jwt-signing",
    "Issuer": "FitnessDuckApp",
    "Audience": "FitnessDuckUsers",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 30
  },

  "VapidKeys": {
    "PublicKey": "your-pwa-vapid-public-key",
    "PrivateKey": "your-pwa-vapid-private-key"
  }
}
