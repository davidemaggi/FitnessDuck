@inherits LayoutComponentBase
@* Required *@
<MudThemeProvider />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<MudLayout>

    <MudAppBar Elevation="0" Color="Color.Transparent">
        <MudIcon Icon="@Icons.Material.Filled.CatchingPokemon"></MudIcon>
        <MudText Typo="Typo.h6" Class="ml-2">FitnessDuck</MudText>
        <MudSpacer />
        <NavMenu/>
    </MudAppBar>
    

    <MudMainContent Class="d-flex flex-column" Style="height:100vh; overflow:hidden;">
        @Body
    </MudMainContent>

</MudLayout>

@code {
    private bool _drawerOpen = false;
  
   

    void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }

   
}
