@inherits LayoutComponentBase
@* Required *@
<MudThemeProvider />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<MudLayout>

    <MudAppBar Elevation="1" Color="Color.Primary">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudText Typo="Typo.h6" Class="ml-2">FitnessDuck</MudText>
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Never" Variant="DrawerVariant.Temporary" Elevation="1" Anchor="Anchor.Left" Modal="true">
        <NavMenu/>
    </MudDrawer>

    <MudMainContent Class="d-flex flex-column" Style="height:100vh; overflow:hidden;">
        @Body
    </MudMainContent>

</MudLayout>

@code {
    private bool _drawerOpen = false;
  
   

    void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }

   
}
