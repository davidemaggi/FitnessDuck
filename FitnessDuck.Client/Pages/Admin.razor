@page "/admin"
@using FitnessDuck.Client.Layout.Schedules
@using FitnessDuck.Client.Layout.Users
@using FitnessDuck.Models
@using FitnessDuck.Models.Common
@using FitnessDuck.Models.DTOs
@using FitnessDuck.Share.Clients.Implementations
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization


@attribute [Authorize]


<MudTabs Color="Color.Info" Outlined="true">
    <AuthorizeView Roles="Admin">
        <Authorized>
            <MudTabPanel Text="Schedules" Icon="@Icons.Material.Filled.CalendarMonth">
                <SchedulesLayout/>
            </MudTabPanel>
            <MudTabPanel Text="Utenti" Icon="@Icons.Material.Filled.Person">
                <UsersListLayout/>
            </MudTabPanel>
        </Authorized>
    </AuthorizeView>
    <AuthorizeView >
        <Authorized>
            <MudTabPanel Text="My Info" Icon="@Icons.Material.Filled.PersonOutline">
                <UserLayout/>
            </MudTabPanel>
        </Authorized>
        
    </AuthorizeView>

    
    
  
</MudTabs>